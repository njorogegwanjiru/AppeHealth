        <activity android:name=".Doctor.UpdateAppointments" />
        <activity android:name=".Doctor.DocHome" />
        <activity android:name=".Admin.admin_home" />
        <activity android:name=".Patient.patient_view_doctors" />
        <activity android:name=".Doctor.DoctorRegistration" />
        <activity android:name=".Admin.LocationRegistration" />
        <activity android:name=".Admin.HospitalRegistration" />
        <activity android:name=".Patient.Location_Selector" />
        <activity
            android:name=".Shared.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Patient.patient_menu" />
        <activity android:name=".Patient.All_Patients" />
        <activity android:name=".Shared.Settings" />
        <activity android:name=".Patient.PatientRegistration" />
        <activity android:name=".Shared.LogIn" />
        <activity android:name=".Patient.Home" />
